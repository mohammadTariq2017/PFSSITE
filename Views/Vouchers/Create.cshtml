@model PFSSITE.ViewModel.VoucherVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create Voucher</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="StudentId" class="control-label"></label>
                    <select class="form-control" asp-for="StudentId" asp-items="ViewBag.StudentId">
                        <option value="">Select Student</option>
                    </select>
                    <span asp-validation-for="StudentId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="ClassId" class="control-label"></label>
                    <select class="form-control" asp-for="ClassId" asp-items="ViewBag.ClassId">
                        <option value="">Select Class</option>
                    </select>
                    <span asp-validation-for="ClassId" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Month" class="control-label"></label>
                    <input asp-for="Month" class="form-control" />
                    <span asp-validation-for="Month" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="DueDate" class="control-label"></label>
                    <input asp-for="DueDate" class="form-control" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="ReceivingDate" class="control-label"></label>
                    <input asp-for="ReceivingDate" class="form-control" />
                    <span asp-validation-for="ReceivingDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Discount" class="control-label"></label>
                    <input asp-for="Discount" class="form-control" />
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="RemainingAmount" class="control-label"></label>
                    <input asp-for="RemainingAmount" class="form-control" />
                    <span asp-validation-for="RemainingAmount" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="right m-t-10">
                        <input type="submit" value="Create" class="btn btn-sm btn-primary" />
                        <a asp-action="Index" class="btn btn-sm btn-secondary">View All</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
