@model PFSSITE.Models.Voucher

@{
    ViewData["Title"] = "Details";
}

<h1>Voucher Details</h1>

    <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <tr>
                    <th><label asp-for="StudentId" class="control-label"></label></th>
                    <td>@Html.DisplayFor(model => model.Student.StudentName)</td>
                </tr>
                <tr>
                    <th>
                        <label asp-for="ClassId" class="control-label"></label>
                    </th>
                    <td>@Html.DisplayFor(model => model.Class.ClassName)</td>
                </tr>
                <tr>
                    <th><label asp-for="Title" class="control-label"></label></th>
                    <td> @Html.DisplayFor(model => model.Title)</td>
                </tr>
                <tr>
                    <th><label asp-for="Month" class="control-label"></label></th>
                    <td> @Html.DisplayFor(model => model.Month)</td>
                </tr>
                <tr>
                    <th><label asp-for="DueDate" class="control-label"></label></th>
                    <td> @Html.DisplayFor(model => model.DueDate)</td>
                </tr>
                <tr>
                    <th><label asp-for="ReceivingDate" class="control-label"></label></th>
                    <td> @Html.DisplayFor(model => model.ReceivingDate)</td>
                </tr>
                <tr>
                    <th><label asp-for="Amount" class="control-label"></label></th>
                    <td> @Html.DisplayFor(model => model.Amount)</td>
                </tr>
                <tr>
                    <th><label asp-for="Discount" class="control-label"></label></th>
                    <td> @Html.DisplayFor(model => model.Discount)</td>
                </tr>
                <tr>
                    <th><label asp-for="RemainingAmount" class="control-label"></label></th>
                    <td> @Html.DisplayFor(model => model.RemainingAmount)</td>
                </tr>                
                <tr>
                    <th><label asp-for="Description" class="control-label"></label></th>
                    <td> @Html.DisplayFor(model => model.Description)</td>
                </tr>           
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="right m-t-10">
                <a asp-action="Index" class="btn btn-sm btn-secondary">View All</a>
            </div>
        </div>
    </div>
    